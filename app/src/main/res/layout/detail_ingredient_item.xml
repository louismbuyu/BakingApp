<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:id="@+id/ingredient_name"
        android:text="Nutella spread the greatest, make this so that it is double"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/TOP_MARGIN"
        android:layout_marginLeft="@dimen/LEFT_MARGIN"
        android:layout_toLeftOf="@id/ingredient_amount"
        android:layout_marginRight="@dimen/TOP_MARGIN"
        android:layout_marginBottom="@dimen/TOP_MARGIN"/>

    <TextView
        android:id="@+id/ingredient_amount"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ingredient_measure"
        android:text="2.0"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/ingredient_measure"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:text="TBLESPN"
        android:textColor="#000000"
        android:textAlignment="textEnd" />

</RelativeLayout>