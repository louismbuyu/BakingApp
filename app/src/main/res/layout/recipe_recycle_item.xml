<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:id="@+id/title_id"
        android:layout_width="match_parent"
        android:text="Recipe Introduction"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/LEFT_MARGIN"
        android:layout_marginRight="@dimen/LEFT_MARGIN"
        android:layout_marginTop="@dimen/TOP_MARGIN"/>

    <TextView
        android:id="@+id/description_id"
        android:layout_below="@+id/title_id"
        android:layout_marginTop="@dimen/TOP_MARGIN"
        android:textSize="17sp"
        android:text="This is the description of the recipe and show be desdjd djkahdh "
        android:textColor="#4d4d4d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/LEFT_MARGIN"
        android:layout_marginRight="@dimen/LEFT_MARGIN"
        />

    <ImageView
        android:id="@+id/format_img_id"
        android:layout_marginTop="@dimen/TOP_MARGIN"
        android:layout_below="@+id/description_id"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/LEFT_MARGIN"/>

    <TextView
        android:id="@+id/format_tv_id"
        android:layout_marginTop="@dimen/TOP_MARGIN"
        android:text="Video format"
        android:layout_below="@+id/description_id"
        android:layout_toRightOf="@id/format_img_id"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/TOP_MARGIN"
        android:layout_marginRight="@dimen/LEFT_MARGIN"
        android:layout_marginBottom="@dimen/TOP_MARGIN"/>

</RelativeLayout>